<robot name="bluecube_model">
  <link name="world" />
  
  <joint name="cube1_joint" type="floating"> 
    <parent link="world" />
	<origin xyz="0 0.0 0.05" rpy="0 0 0" /> <!--   definition the orgin position of the object!! very important -->
    <child link="bluecube1" />
  </joint>
  
  <link name="bluecube1">
    <inertial>
      <origin xyz="0 0 0" /> 
      <mass value="0.1" />
      <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.04" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.04" />
      </geometry>
    </collision>
  </link>
  
  <gazebo reference="bluecube1">
    <material>Gazebo/Blue</material>
  </gazebo>

</robot>
