<?xml version="1.0"?>
<robot name="bluebase_model">
  <link name="world" />
  
  <joint name="cube1_joint" type="floating"> 
    <parent link="world" />
	<origin xyz="0 0.0 0.05" rpy="0 0 0" /> <!--   definition the orgin position of the object!! very important -->
    <child link="bluebase" />
  </joint>
  
  <link name="bluebase">
    <inertial>
      <origin xyz="0 0 0.0" /> 
      <mass value="1.1" />
      <inertia  ixx="0.01" ixy="0.0"  ixz="0.0"  iyy="0.01"  iyz="0.0"  izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.10" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.2 0.2 0.10" />
      </geometry>
    </collision>
  </link>
  
  <gazebo reference="bluebase">
    <material>Gazebo/Grey</material>
  </gazebo>

</robot>
